{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/test/jest.setup.ts"],
  "moduleNameMapping": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": [
    "**/*.jest.test.{js,jsx,ts,tsx}"
  ],
  "transform": {
    "^.+\\.(ts|tsx)$": ["ts-jest", {
      "tsconfig": "tsconfig.json"
    }]
  },
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "collectCoverageFrom": [
    "src/**/*.{ts,tsx}",
    "!src/**/*.d.ts",
    "!src/main.tsx",
    "!src/vite-env.d.ts"
  ]
}
